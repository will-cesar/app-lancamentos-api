{
   "compilerOptions": {
      "allowJs": true,
      "baseUrl": "./src",
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "lib": ["es6"],      
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "removeComments": true,
      "resolveJsonModule": true,  
      "rootDir": "./",      
      "sourceMap": true,
      "target": "es2017",
      "typeRoots": [
         "./node_modules/@types",
         "./src/@types"
      ]
   },
   "exclude": [
      "node_modules"
   ]
}