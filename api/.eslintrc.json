{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "eslint-plugin-import-helpers"
  ],
  "rules": {
    "arrow-parens": ["error", "always"], // padroniza os parenteses nas arrow functions
    "comma-dangle": ["error", "never"], // remove a vírgula da última propriedade de um objeto
    "eol-last": ["error", "always"], // cria uma linha no final de cada arquivo
    "import-helpers/order-imports": [ //organização das importações dentro dos arquivos
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          "absolute",
          "module",
          ["parent", "sibling", "index"]
        ],
        "alphabetize": { "order": "asc", "ignoreCase": true } 
      }
    ],
    "indent": [ // identação de 2 espaços nos arquivos
      "error",
      2
    ],
    "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 0 }], // apenas uma linha de espaço permitido
    "object-curly-spacing": ["error", "always"], // espaço dentro dos objetos
    "quotes": [ // chaves simples
      "error",
      "single"
    ],
    "semi": [ // ponto e vírgula no final
      "error",
      "always"
    ]
  }
}
